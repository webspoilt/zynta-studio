{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "GodLevelIDE",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": true,
                "scope": [
                    "$APPDATA/**",
                    "$RESOURCE/**",
                    "$CWD/**"
                ]
            },
            "shell": {
                "all": true,
                "execute": true,
                "scope": [
                    {
                        "name": "run-scripts",
                        "cmd": "sh",
                        "args": true
                    }
                ]
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "identifier": "com.godlevelide.dev",
            "targets": "all"
        },
        "security": {
            "csp": "default-src 'self'; connect-src 'self' http://localhost:1420 https://api.openai.com https://api.anthropic.com"
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "God-Level IDE",
                "height": 1024,
                "width": 1440
            }
        ]
    }
}